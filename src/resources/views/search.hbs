<div class="mt-4">
    {{!-- Method của form mặt định là get --}}
    <form method="POST" action="">
        <div class="form-group">
            <label for="search-input">Từ khóa</label>
            <input type="text" class="form-control" name="q" id="search-input" placeholder="Nhập từ khóa...">
        </div>
        <div class="form-group">
            <label for="gender-input">Giới tính</label>
            <select class="form-control" name="gender" id="gender-input">
                <option value="">-- Chọn giới tính --</option>
                <option value="Male">Nam</option>
                <option value="Female">Nữ</option>
            </select>
        </div>
    
        {{!-- Mặc định là type là submit --}}
        <button type="submit" class="btn btn-primary">Tìm kiếm</button>
    </form>
</div>